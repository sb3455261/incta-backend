{
  "name": "incta-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {

    "prisma:generate:users": "cd apps/users && prisma generate",
    "prisma:migrate:users": "prisma migrate deploy --schema=./apps/users/prisma/schema.prisma",
    "dev:users": "sh set-env-dev.sh sh -c 'npm run prisma:generate:users && nest start users --watch'",
    "build:users": "sh set-env-prod.sh sh -c 'npm run prisma:generate:users && rm -rf dist && mkdir -p dist/apps/users/prisma && cp -r apps/users/prisma/generated dist/apps/users/prisma/generated && npm run prisma:migrate:users && nest build users'",
    "start:users": "sh set-env-prod.sh sh -c 'node ./dist/apps/users/main'",
    "test:e2e:users": "jest --config ./apps/users/test/jest-e2e.json",

    ":format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    ":lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "npm run :format && npm run :lint",

    "test:e2e": "npm run test:e2e:users",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.17.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.17.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@users-generated(.*)$": "<rootDir>/apps/users/prisma/generated/prisma-users-client$1"
    }
  }
}
